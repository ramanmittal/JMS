@inject Microsoft.Extensions.Configuration.IConfiguration configuration
@{
    @if (User.Identity.IsAuthenticated)
    {
        @if (configuration[JMS.Service.Settings.JMSSetting.DefaultTenant].Equals(Context.Request.RouteValues["tenant"].ToString(),StringComparison.OrdinalIgnoreCase ))
        {
            Layout = "_Layout";
        }
        else
        {
            Layout = "_journalLayout";
        }
    }
    else
    {
        @if (configuration[JMS.Service.Settings.JMSSetting.DefaultTenant].Equals(Context.Request.RouteValues["tenant"].ToString(),StringComparison.OrdinalIgnoreCase))
        {
            Layout = "_LoginLayout";
        }
        else
        {
            Layout = "_JournalLoginLayout";
        }
    }
    
}
