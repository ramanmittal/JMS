@model JMS.ViewModels.Submissions.SubmissionRejectionEmailModel
@{
    Layout = null;
}
<html>
<head>
    <style type="text/css">
        .table {
            width: 100%
        }

        .bold {
            font-weight: bold;
        }

        td {
            vertical-align: top
        }
    </style>
</head>
<body>
    <p>Hi, @($"{Model.FirstName} {Model.LastName}")</p>
    <p>Your submission has been rejected.</p>
    @if (!string.IsNullOrEmpty(Model.RejectionMessage))
    {
        <table class="dtltbl">
            <tr><td class="bold">Editor Comment</td><td> @Html.Raw(Model.RejectionMessage)</td></tr>
        </table>
    }

</body>
</html>
